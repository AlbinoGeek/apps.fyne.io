---
layout: none
---
[
{%- assign applist = site.apps | sort: 'title' -%}
{%- for app in applist -%}
{%- assign app_url = app.url | absolute_url  -%}
{
  "id": "{{ app.appid }}",
  "name": "{{ app.name }}",
  "icon": "{{ app.img }}",
  "summary": "{{ app.excerpt }}",
  "url": "{{ app.url | absolute_url  }}",

  "category": "{{ app.category }}",
  "website": "{{ app.home }}",
  "developer": "{{ app.developer }}",

  "source": {
    "git": "{{ app.git }}",
    "tag": "{{ app.tag }}",
    "dir": "{{ app.dir }}",
  },
  "version": "{{ app.version }}"
  "date": "{{ app.date | date_to_xmlschema }}",
} 
{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]
