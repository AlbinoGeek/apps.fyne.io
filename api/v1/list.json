---
layout: none
---
[
{%- assign applist = site.apps | sort: 'title' -%}
{%- for app in applist -%}
{%- assign app_url = app.url | absolute_url  -%}
{
  "id": "{{ app.appid }}",
  "name": "{{ app.name }}",
  "img": "{{ app.img }}",
  "date": "{{ app.date | date_to_xmlschema }}",
  "excerpt": "{{ app.excerpt }}",
  "url": "{{ app.url | absolute_url  }}",
  "homepage": "{{ app.home }}",

  "git": "{{ app.git }}",
  "tag": "{{ app.tag }}",
  "dir": "{{ app.dir }}",
  "version": "{{ app.version }}"
}
{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]
